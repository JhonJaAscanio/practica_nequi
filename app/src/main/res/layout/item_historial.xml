<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    tools:context=".HistorialActivity">

    <TextView
        android:id="@+id/tvFechaCreacion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=".. 21-02-202"
        android:textAlignment="center"
        android:layout_marginTop="10dp"/>
    <RelativeLayout
        android:id="@+id/rlLlegada"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="4dp"
        android:background="@drawable/edittext_rombo_blaco"
        android:layout_marginTop="15dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="60dp"
        android:layout_marginBottom="10dp"
        android:padding="15dp"
        app:layout_constraintTop_toBottomOf="@id/tvFechaCreacion"
        >

        <ImageView
            android:id="@+id/icono"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:src="@drawable/icono_cash_up"
            android:rotation="90"/>

        <TextView
            android:id="@+id/tvNumDes"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_toRightOf="@id/icono"
            android:layout_alignParentTop="true"
            android:text="Recibido de"
            android:textSize="17dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tvMonto"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:layout_marginEnd="15dp"
            android:text="Texto Money"
            android:textAlignment="textEnd"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:textSize="17sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tvDe"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="De"
            android:textAlignment="textStart"
            android:layout_marginStart="30dp"
            android:textSize="16dp"/>



    </RelativeLayout>

    </LinearLayout>


