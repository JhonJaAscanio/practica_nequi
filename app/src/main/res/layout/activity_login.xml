<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo"
    tools:context=".LoginActivity"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/ivAtras"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:clickable="true"
        android:onClick="back"
        android:src="@drawable/arrow_back"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.045"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toBottomOf="@+id/ivAtras"
        tools:layout_editor_absoluteX="107dp"
        tools:layout_editor_absoluteY="129dp"
        android:layout_marginTop="100dp"
        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="bottom">

            <LinearLayout
                android:id="@+id/linearLayaout"
                android:layout_width="match_parent"
                android:layout_height="47dp"
                android:orientation="horizontal"
                android:background="@drawable/boton_redondo"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="5dp"
                android:layout_weight="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:padding="11dp"
                    android:text="+57"
                    android:textColor="@color/pink_nequi"
                    android:textStyle="bold"
                    android:textSize="16sp" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="10sp"
                    android:background="@android:color/black" />

                <EditText
                    android:id="@+id/etTelefono"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Número de celular"
                    android:inputType="phone"
                    android:textStyle="bold"
                    android:maxLength="10"
                    android:textColorHint="@color/white"
                    android:textColor="@color/white"
                    android:padding="8dp"
                    android:textSize="16sp"
                    android:background="@null"
                    />

            </LinearLayout>


            <TextView
                android:id="@+id/tvError"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Escribe porfa el número de tu cel para seguir"
                android:textColor="@color/red"
                android:paddingStart="25dp"
                android:textSize="13dp"
                android:textStyle="bold"
                android:layout_marginBottom="18dp"
                android:visibility="invisible"
                android:layout_weight="1"/>

            <Button
                android:id="@+id/boton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="50dp"
                android:background="@drawable/redondear"
                android:onClick="verificarTelefono"
                android:text="Inicia sesion"
                android:textStyle="bold"
                android:layout_weight="1"/>


        </LinearLayout>

    </ScrollView>



</androidx.constraintlayout.widget.ConstraintLayout>